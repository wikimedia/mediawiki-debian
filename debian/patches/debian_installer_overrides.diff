+# Add more configuration options below.\n\n";
+		return $ls;
+	}
+}
+
+class DebianWebInstaller extends WebInstaller {
+	public function getLocalSettingsLocation() {
+		return '/etc/mediawiki/LocalSettings.php';
+	}
